

{% extends 'base2.html.twig' %}
{% block title %}Détails du Projet{% endblock %}

{% block body %}
    <h1 class="text-center">Détails du Projet</h1>

    <div>
        <p><strong>ID:</strong> {{ projet.idP }}</p>
        <p><strong>Nom:</strong> {{ projet.nomP }}</p>
        <p><strong>Description:</strong> {{ projet.descriptionP }}</p>
        <p><strong>Date de début:</strong> {{ projet.dateDebut ? projet.dateDebut|date('Y-m-d H:i') : '' }}</p>
        <p><strong>Date de fin:</strong> {{ projet.dateFin ? projet.dateFin|date('Y-m-d H:i') : '' }}</p>
        <p><strong>Statut:</strong> {{ projet.statuts }}</p>

        {% if projet.pdfprojet %}
            <p><strong>Fichier PDF:</strong> <a href="{{ asset('uploads/' ~ projet.pdfprojet) }}" target="_blank">Télécharger</a></p>
        {% else %}
            <p>Aucun fichier PDF associé.</p>
        {% endif %}
    </div>

    <a href="{{ path('app_projet_edit', {'id': projet.idP}) }}" class="btn btn-warning">Modifier</a>
    <a href="{{ path('app_projet_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}


           