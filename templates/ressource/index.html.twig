

{% extends 'base2.html.twig' %}

{% block title %}Ressources{% endblock %}

{% block body %}
    <h1>Liste des ressources</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>Durée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ressource in ressources %}
                <tr>
                    <td>{{ ressource.nomR }}</td>
                    <td>{{ ressource.typeR }}</td>
                    <td>{{ ressource.dureeR }} heures</td>
                    <td>
                        <a href="{{ path('app_ressource_show', {'id': ressource.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}" class="btn btn-warning">Modifier</a>
                        <form action="{{ path('app_ressource_delete', {'id': ressource.id}) }}" method="post" style="display:inline;">
                            <button class="btn btn-danger">Supprimer</button>
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ressource.id) }}">
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune ressource trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ressource_new') }}" class="btn btn-success">Ajouter une ressource</a>
{% endblock %}

           